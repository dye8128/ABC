{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ デバッグ用コンパイル",
            "command": "/usr/bin/g++",
            "args": [
                "-fsanitize=undefined,address",
                "-fno-sanitize-recover=all",
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-std=gnu++2b",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "表示中のファイルをデバッグ用にコンパイルします。"
        },
    ],
    "version": "2.0.0"
}